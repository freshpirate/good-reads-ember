<h1>Books</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Cover</th>
      <th>ID</th>
      <th>Title</th>
      <th>Author</th>
      <th>Synopsis</th>
      <th>ISBN Number</th>
      <th>Published Year</th>
      <th>Language</th>
      <th>Publisher</th>
      <th>Rating</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |book|}}
    <tr>
      <th><img src={{book.cover}} alt={{book.title}} width="100px"></th>
      <td>{{book.id}}</td>
      <td>{{book.title}}</td>
      <td>{{book.author}}</td>
      <td class="large-text">{{book.synopsis}}</td>
      <td>{{book.isbn_number}}</td>
      <td>{{book.published_year}}</td>
      <td>{{book.language}}</td>
      <td>{{book.publisher}}</td>
      <td>{{book.average_rating}}</td>
      <td>{{#link-to 'books.book' book }}Show{{/link-to}}</td>
      <td>{{#link-to 'books.edit' book }}Edit{{/link-to}}</td>
    </tr>
  {{/each}}
  </tbody>
</table>