<h1>Sign In</h1>

{{#if responseMessage}}
    <div class="alert alert-success">{{responseMessage}}</div>
{{/if}}

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label for="form-group">Email:</label>
            <div>
                {{input type='email' value=email class="form-control" placeholder="Your email address"}}
            </div>
        </div>

        <div class="form-group">
            <label for="form-group">Password:</label>
            <div>
                {{input type='password' value=password class="form-control" placeholder="Password"}}
            </div>
        </div>

        <div class="form-group col-sm-3">
            <button  class="btn btn-success btn-block" {{action 'login'}}>Log in</button>
        </div>
    </div>
</div>