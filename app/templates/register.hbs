<h1>Registration Form</h1>

{{#if isErrorPresent}}
    {{#each errorMessages as |response|}}
        <div class="alert alert-danger">{{response}}</div>
    {{/each}}
{{/if}}

{{#if isSuccessPresent}}
    {{#each successMessages as |response|}}
        <div class="alert alert-success">{{response}}</div>
    {{/each}}
{{/if}}

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label for="form-group">Email:</label>
            <div>
                {{input type='email' value=email class="form-control" placeholder="Your email address"}}
            </div>
        </div>

        <div class="form-group">
            <label for="form-group">Name:</label>
            <div>
                {{input type='text' value=name class="form-control" placeholder="Your name"}}
            </div>
        </div>

        <div class="form-group">
            <label for="form-group">Password:</label>
            <div>
                {{input type='password' value=password class="form-control" placeholder="Password"}}
            </div>
        </div>

        <div class="form-group">
            <label for="form-group">Confirm Password:</label>
            <div>
                {{input type='password' value=password_confirm class="form-control" placeholder="Confirm you password"}}
            </div>
        </div>

        <div class="form-group col-sm-3">
            <button  class="btn btn-success btn-block" {{action 'register'}}>Send</button>
        </div>
    </div>
</div>